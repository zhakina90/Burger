<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center" id="top-bar">
			<img src="/assets/images/burger.png" alt="burger" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="row">
			<div class="col-sm-6 text-center" class="task">

				{{#each burgers}}
				{{#unless this.devoured}}
				<div class="col-sm-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
					<!-- {{this.Date}} -->
				</div>
				<div class="col-sm-3 text-center">

					<form class="devour-form" class="button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-sm-6 text-center" class="task">
			{{#each burgers}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger you want to eat Click the "Submit" button.</p>
		</div>
	</div>
</div>
<div class="col-md-4" id="devoured">
	<h2 id="devoured-h">Devoured</h2>
	{{#each burgers}}
	{{#if this.devoured}}
	<p class="p-devoured">{{this.id}}. {{this.burger_name}}</p>
	{{/if}}
	{{/each}}
</div>

<div class="col-md-1"></div>

</div>